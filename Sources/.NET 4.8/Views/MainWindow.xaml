<Window x:Class="LinkSimplifier.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:system="clr-namespace:System;assembly=mscorlib"
        Title="LinkSimplifier"
        Height="550" Width="900" MinHeight="550" MinWidth="900"
        WindowStartupLocation="CenterScreen" Background="#FAFAFA">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <SolidColorBrush x:Key="AccentColor" Color="#0078D4"/>
        <SolidColorBrush x:Key="CardBackground" Color="White"/>
        <SolidColorBrush x:Key="CardBorder" Color="#E8E8E8"/>
        <SolidColorBrush x:Key="PlaceholderColor" Color="#AAAAAA"/>
        <SolidColorBrush x:Key="ProgressTextColor" Color="#666666"/>

        <system:Double x:Key="ControlHeight">44</system:Double>
        <system:Double x:Key="ButtonWidth">100</system:Double>
        <system:Double x:Key="SmallButtonWidth">80</system:Double>
        <system:Double x:Key="ProgressBarHeight">8</system:Double>

        <Style TargetType="TextBlock" x:Key="ProgressText">
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Foreground" Value="{StaticResource ProgressTextColor}"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style TargetType="ProgressBar" x:Key="ProgressBarStyle">
            <Setter Property="Height" Value="{StaticResource ProgressBarHeight}"/>
            <Setter Property="Foreground" Value="{StaticResource AccentColor}"/>
            <Setter Property="Background" Value="#EEEEEE"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>

        <Style TargetType="Button" x:Key="ActionButton">
            <Setter Property="Background" Value="{StaticResource AccentColor}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="Margin" Value="8,0,0,0"/>
            <Setter Property="Height" Value="{StaticResource ControlHeight}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="6">
                            <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#006CBE"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#005A9E"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#CCCCCC"/>
                                <Setter Property="Foreground" Value="#888888"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="TextBox" x:Key="InputBox">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <Style TargetType="Border" x:Key="RoundedBorder">
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{StaticResource CardBorder}"/>
            <Setter Property="Background" Value="{StaticResource CardBackground}"/>
        </Style>

        <Style x:Key="PlaceholderTextBox" TargetType="TextBox" BasedOn="{StaticResource InputBox}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Grid>
                            <ScrollViewer x:Name="PART_ContentHost"/>
                            <TextBlock x:Name="placeholderText" Text="请填写云盘分享链接..."
                                   Foreground="{StaticResource PlaceholderColor}"
                                   Visibility="Collapsed" Margin="12,0,0,0"
                                   VerticalAlignment="Center" FontStyle="Italic"
                                   IsHitTestVisible="False"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="Text" Value="">
                                <Setter TargetName="placeholderText" Property="Visibility" Value="Visible"/>
                            </Trigger>
                            <Trigger Property="Text" Value="{x:Null}">
                                <Setter TargetName="placeholderText" Property="Visibility" Value="Visible"/>
                            </Trigger>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="placeholderText" Property="Visibility" Value="Collapsed"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Margin="0,0,0,16" Style="{StaticResource RoundedBorder}" Padding="16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" Style="{StaticResource RoundedBorder}">
                    <TextBox Text="{Binding InputUrl, UpdateSourceTrigger=PropertyChanged}"
                         Height="{StaticResource ControlHeight}"
                         Style="{StaticResource PlaceholderTextBox}"/>
                </Border>

                <Button Grid.Column="1" Content="开始解析"
                    Command="{Binding ParseCommand}"
                    MinWidth="{StaticResource ButtonWidth}" Style="{StaticResource ActionButton}"/>

                <Button Grid.Column="2" Content="{Binding DownloadButtonText}"
                    Command="{Binding DownloadCommand}"
                    MinWidth="{StaticResource ButtonWidth}" Style="{StaticResource ActionButton}"/>

                <Button Grid.Column="3" Content="清空"
                    Command="{Binding ClearCommand}"
                    MinWidth="{StaticResource SmallButtonWidth}" Style="{StaticResource ActionButton}"/>
            </Grid>
        </Border>

        <Border Grid.Row="1" Style="{StaticResource RoundedBorder}" Padding="16" Margin="0,0,0,0">
            <TextBox Text="{Binding ResultText, Mode=OneWay}"
                    Style="{StaticResource InputBox}"
                    TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"
                    AcceptsReturn="True" IsReadOnly="True" FontFamily="Segoe UI"
                    VerticalContentAlignment="Top" HorizontalContentAlignment="Left"/>
        </Border>

        <Border Grid.Row="2" Style="{StaticResource RoundedBorder}" Padding="16"
                Visibility="{Binding ShowDownloadPanel, Converter={StaticResource BoolToVisibilityConverter}}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <ProgressBar Grid.Row="0" Value="{Binding ProgressValue}"
                            Style="{StaticResource ProgressBarStyle}"
                            Minimum="0" Maximum="100"/>

                <Grid Grid.Row="1" Margin="0,8,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Style="{StaticResource ProgressText}">
                        <Run Text="已下载: "/>
                        <Run Text="{Binding DownloadedSize}"/>
                        <Run Text=" / 总大小: "/>
                        <Run Text="{Binding TotalSize}"/>
                    </TextBlock>

                    <TextBlock Grid.Column="1" Style="{StaticResource ProgressText}">
                        <Run Text="{Binding ProgressValue, StringFormat={}{0:0.##}}"/>
                        <Run Text=" %"/>
                    </TextBlock>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>